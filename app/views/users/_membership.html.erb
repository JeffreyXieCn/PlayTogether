<tr>
  <td><%= index + 1%></td>
  <td><%= link_to member.club.name, club_path(member.club) %>
    <% if member.admin? %>
      <i class="glyphicon glyphicon-user" data-toggle="tooltip" data-placement="right" title="Club admin"></i>
    <% end %>
  </td>
  <td id="balance-<%= member.id%>"><%= member.balance%></td>
</tr>