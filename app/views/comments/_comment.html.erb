<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
   <span class="content">
    <%= comment.content %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
    <% if current_user?(comment.user) %>
      <%# link_to "delete", comment, method: :delete,
                                       data: { confirm: "You sure?" } %>
                                       
      <%# link_to "delete", micropost_comment_path(comment), method: :delete,
                                       data: { confirm: "You sure?" } %>
                                       
      <%# link_to "delete", url: micropost_comment_path(comment), method: :delete,
                                       data: { confirm: "You sure?" } %>
      <%= link_to "delete", [comment.micropost, comment], :confirm => "Are you sure?", :method => :delete, remote: true %>
    <% end %>
  </span>
</li>